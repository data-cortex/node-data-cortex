    "target": "ESNext",
    "module": "ESNext",
    "lib": ["es2020"],
    "declaration": false,
    "outDir": "./dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
